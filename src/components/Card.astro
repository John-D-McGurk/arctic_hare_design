---
interface Props {
  title: string;
  image: string;
  href: string;
  decoration: string;
}

const { href, title, image, decoration } = Astro.props;
---

<li class="link-card">
  <a href={href}>
    <h3>
      <span class="decoration text-accent">{decoration}</span>
      {title}
    </h3>
    <img src={image} alt="" />
    <span class="btn-sm btn-primary"> Read more</span>
  </a>
</li>
<style>
  a {
    color: var(--black);
    text-decoration: none;
  }
  h3 {
    padding: var(--space-sm);
  }

  .link-card {
    position: relative;
    background-color: var(--secondary);
    border-radius: 4rem;
    flex: 1;
    list-style: none;
    min-height: 50rem;
    overflow: hidden;
  }

  .decoration {
    position: absolute;
    top: 1rem;
    left: 1.5rem;
  }

  .btn-sm {
    position: absolute;
    bottom: var(--space-xs);
    right: var(--space-xs);
  }
  img {
    position: absolute;
    bottom: 0;
    width: 100%;
  }
</style>
